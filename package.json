{
  "name": "zi-xiao-ai",
  "private": true,
  "version": "0.0.0",
  "main": "electron/main.js",
  "description": "紫小艾应用",
  "author": "Your Name",
  "productName": "ZiXiaoAi",
  "scripts": {
    "dev": "vite",
    "build": "vite build --emptyOutDir",
    "preview": "vite preview",
    "electron:serve": "concurrently \"npm run dev\" \"sleep 5 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "cross-env NODE_ENV=production npm run build && npx electron-builder",
    "electron:build:win": "cross-env NODE_ENV=production npm run build && npx electron-builder --win --x64",
    "electron:build:mac": "cross-env NODE_ENV=production npm run build && npx electron-builder --mac",
    "electron:build:linux": "cross-env NODE_ENV=production npm run build && npx electron-builder --linux",
    "electron:build:linux-arm64": "cross-env NODE_ENV=production npm run build && npx electron-builder --linux --arm64",
    "electron:start": "electron-forge start",
    "start": "electron-forge start -- --inspect=9229 --no-sandbox",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "build-linux-arm64": "electron-forge make --platform=linux --arch=arm64 --targets=\"@electron-forge/maker-zip\""
  },
  "build": {
    "appId": "com.yourcompany.zixiaoai",
    "productName": "ZiXiaoAi",
    "copyright": "Copyright © 2025 ${author}",
    "electronVersion": "39.2.4",
    "directories": {
      "output": "electron_dist",
      "buildResources": "public"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json",
      "node_modules/**/*",
      "!**/node_modules/.bin/**",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme,LICENSE,LICENSE.txt}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples,demo}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/*.map",
      "!**/node_modules/*.md",
      "!**/node_modules/*.yml",
      "!**/node_modules/*.yaml",
      "!**/node_modules/*.json",
      "!**/node_modules/**/src/**",
      "!**/node_modules/**/lib/esm/**",
      "!**/node_modules/sass-embedded/**",
      "!**/node_modules/vite-plugin-imagemin/**"
    ],
    "extraResources": [
      {
        "from": "public/music",
        "to": "public/music",
        "filter": [
          "**/*.mp3"
        ]
      }
    ],
    "asar": true,
    "asarUnpack": [
      "**/*.node",
      "**/*.dll",
      "public/music/**"
    ],
    "compression": "store",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "public/home.png",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/home.ico",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-setup.${ext}",
      "executableName": "ZiXiaoAi"
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "zip"
      ],
      "icon": "public/home.png",
      "category": "Utility",
      "artifactName": "${productName}-${version}-linux-arm64.${ext}",
      "executableName": "ZiXiaoAi",
      "maintainer": "Your Name <your.email@example.com>",
      "asarUnpack": [
        "**/*.node",
        "public/music/**"
      ]
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "紫小艾",
      "installerIcon": "public/home.ico",
      "uninstallerIcon": "public/home.ico",
      "installerHeaderIcon": "public/home.ico",
      "license": "LICENSE.txt",
      "artifactName": "${productName}-${version}-setup.${ext}"
    }
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "asar": true,
        "asarUnpack": [
          "**/*.node",
          "**/*.dll",
          "public/music/**"
        ],
        "executableName": "ZiXiaoAi",
        "icon": "public/home",
        "ignore": [
          "node_modules/sass-embedded/**",
          "node_modules/vite-plugin-imagemin/**"
        ]
      },
      "makers": [
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "linux",
            "win32",
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "arch": [
              "arm64",
              "x64"
            ],
            "maintainer": "Your Name <your.email@example.com>",
            "category": "Utility",
            "icon": "public/home.png"
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {
            "arch": [
              "arm64",
              "x64"
            ],
            "maintainer": "Your Name <your.email@example.com>",
            "category": "Utility",
            "icon": "public/home.png"
          }
        },
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "ZiXiaoAi",
            "iconUrl": "https://example.com/home.ico",
            "setupIcon": "public/home.ico"
          }
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "icon": "public/home.png"
          }
        }
      ],
      "plugins": [
        {
          "name": "@electron-forge/plugin-auto-unpack-natives",
          "config": {}
        },
        {
          "name": "@electron-forge/plugin-fuses",
          "config": {
            "forgeConfig": "./forge.config.js",
            "fuses": {
              "runAsNode": false,
              "enableCookieEncryption": true,
              "enableNodeOptionsEnvironmentVariable": false,
              "enableNodeCliInspectArguments": false,
              "enableEmbeddedAsarIntegrityValidation": true,
              "onlyLoadAppFromAsar": true
            }
          }
        }
      ]
    }
  },
  "dependencies": {
    "@chenfengyuan/vue-countdown": "^2.1.3",
    "@element-plus/icons-vue": "^2.3.2",
    "axios": "^1.7.9",
    "crypto-js": "^4.2.0",
    "electron-squirrel-startup": "^1.0.1",
    "element-plus": "^2.9.0",
    "human-signals": "^8.0.1",
    "loudness": "^0.4.2",
    "pinia": "^3.0.3",
    "pinia-plugin-persistedstate": "^4.2.0",
    "swiper": "^11.2.5",
    "vue": "^3.5.25",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "@vitejs/plugin-vue": "^5.2.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "postcss-pxtorem": "^6.1.0",
    "sass": "^1.85.1",
    "sass-embedded": "^1.86.0",
    "terser": "^5.44.1",
    "unplugin-auto-import": "^19.1.1",
    "unplugin-element-plus": "^0.9.1",
    "unplugin-vue-components": "^28.4.1",
    "vite": "^6.0.1",
    "vite-plugin-imagemin": "^0.6.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  }
}